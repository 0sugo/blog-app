<div class="user-posts">
  <h1 class="user-header">
    <%= image_tag(@user.photo) %>
    <%= @user.name %>
  </h1>
  <% @all_posts.each do |post| %>
    <div class="post-card">
      <%= link_to user_post_path(@user, post) do %>
        <h2 class="post-title"><%= post.title %></h2>
        <p class="post-text"><%= post.text %></p>
        <p class="post-likes">Likes: <%= post.likes_counter %></p>
        <p class="post-comments">Comments: <%= post.comments_counter %></p>
        <h3 class="comments-heading">Comments:</h3>
        <ul class="comments-list">
          <% post.display_comments.each do |comment| %>
            <li>
              <%= comment.author.name %> : <%= comment.text %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>
  <div class="pagination-button">
    <%= will_paginate @all_posts %>
  </div>
  <div class="back-button">
    <%= link_to 'Back to User', user_path(@user) %>
  </div>
</div>
